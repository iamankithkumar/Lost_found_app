<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    tools:context=".postforfound">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:layout_margin="25dp"
        >


        <TextView
            android:id="@+id/text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:autoSizeTextType="uniform"
            android:text="Enter description of item found and date/time when the item was found : "
            android:textColor="@color/teal_200"
            android:textSize="20sp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/text7"
            android:background="@drawable/border"
            android:id="@+id/descfound"
            android:hint="Description and time"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            />


        <Button
            android:id="@+id/foundimgadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descfound"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"

            android:text="ADD IMAGE" />

        <ImageSwitcher
            android:id="@+id/foundimgdisp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/foundimgadd"
            android:layout_centerInParent="true"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.81" />

        <Button
            android:id="@+id/foundimgupld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foundimgadd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="280dp"
            android:text="upload" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/progressbarforpostingfounditems"
            />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?attr/homeAsUpIndicator"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            />


    </RelativeLayout>



</ScrollView>