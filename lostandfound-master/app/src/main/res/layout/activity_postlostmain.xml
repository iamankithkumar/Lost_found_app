<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postlostmain"
    android:background="@drawable/bkg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:layout_margin="25dp"
        >


        <TextView
            android:id="@+id/text8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Description of item lost and date/time when the item was lost"
            android:textColor="@color/teal_200"

            android:textSize="20dp"

            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/text8"
            android:background="@drawable/border"
            android:id="@+id/desclost"
            android:hint="Description and Time"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desclost"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="ADD IMAGE"
            android:id="@+id/lostimgadd"
            />
        <ImageSwitcher
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lostimgadd"
            android:id="@+id/lostimgdisp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.81"/>


        <Button
            android:id="@+id/lostimgupload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lostimgadd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="280dp"
            android:text="upload" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/progressbarforpostinglostitems"
            />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?attr/homeAsUpIndicator" />


    </RelativeLayout>




</ScrollView>